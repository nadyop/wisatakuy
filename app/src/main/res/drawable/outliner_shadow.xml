<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="10dp"
                android:color="@color/silver_grey" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:bottom="@dimen/spacing_extra_smaller"
                android:left="@dimen/spacing_extra_smaller"
                android:right="@dimen/spacing_extra_smaller"
                android:top="@dimen/spacing_extra_smaller" />

            <corners android:radius="@dimen/spacing_super_smaller" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>