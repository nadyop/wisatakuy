<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:textColor">@color/black_1_100</item>
    </style>

    <!--Toolbar-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white_1_100</item>
        <item name="android:textColorSecondary">@color/white_1_100</item>
        <item name="android:textColor">@color/white_1_100</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/blue_1_100</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:textColor">@color/white_1_100</item>
    </style>

    <!--Accent-->
    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_color</item>
    </style>

    <!--Button Bottom-->
    <style name="CardView.FooterAction" parent="CardView.Light">
        <item name="android:background">@color/white_1_100</item>
        <item name="cardCornerRadius">@dimen/card_view_footer_action_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_footer_action_elevation</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Action" parent="Button">
        <item name="android:textSize">@dimen/button_action_text_size</item>
        <item name="android:layout_height">48dp</item>
        <item name="autoSizeMinTextSize">@dimen/button_action_half_text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/button_action_text_size</item>
    </style>

    <style name="Button.Action.Blue" parent="Button.Action">
        <item name="android:radius">4dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white_1_100</item>
    </style>

    <style name="Button.Action.Red" parent="Button.Action">
        <item name="android:radius">4dp</item>
        <item name="android:background">@color/state_error</item>
        <item name="android:textColor">@color/white_1_100</item>
    </style>

    <style name="Button.Normal" parent="Button">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
    </style>

    <style name="Button.Normal.Blue" parent="Button.Normal">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white_1_100</item>
    </style>

    <!--Dialog-->
    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Spinner-->
    <style name="TextView.Form.Text.Enabled" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black_1_50</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Form.Text.Disabled" parent="TextView.Form.Text.Enabled">
        <item name="android:textColor">@color/black_1_25</item>
    </style>

    <style name="TextView.Form.Label.Enabled" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black_1_100</item>
        <item name="android:textColorHint">@color/black_1_50</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.Form.Label.Selected" parent="TextView.Form.Label.Enabled">
        <item name="android:textColor">@color/blue_1_100</item>
    </style>

    <style name="TextView.Form.Label.Hint" parent="TextView.Form.Label.Enabled">
        <item name="android:textColor">@color/black_1_50</item>
    </style>
</resources>
